---
import "@uswds/uswds/css/uswds.css";

// Hack to get around Astro SSR error, would be better to disable SSR
// This grabs JS path which is loaded through a script tag
import uswdsJsPath from "../../node_modules/@uswds/uswds/dist/js/uswds.min.js?url";
import uswdsJsInitPath from "../../node_modules/@uswds/uswds/dist/js/uswds-init.min.js?url";

import Header from "../components/Header.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <!-- TODO: Fix script tag formatting -->
    <script src={uswdsJsInitPath}>

    </script>
    <title>{title}</title>
  </head>
  <body>
    <a class="usa-skipnav" href="#main-content">Skip to main content</a>
    <Header />

    <main id="main-content" class="usa-section">
      <div class="grid-container">
        <slot></slot>
      </div>
    </main>

    <!-- TODO: Fix script tag formatting -->
    <script src={uswdsJsPath}>

    </script>
  </body>
</html>
